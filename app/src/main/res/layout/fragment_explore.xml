<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.fragment.ExploreFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_topBar"
            style="@style/TopActionBarText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/explore" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/animeMovie_explore"
                    style="@style/SecondaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/movies"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/animeMovieMore_explore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_right"
                    style="@style/Icon"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/animeMovie_explore"
                    app:layout_constraintBottom_toBottomOf="@id/animeMovie_explore"
                    android:contentDescription="@string/more" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_animeMovie_explore"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    tools:listitem="@layout/anime_item"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/animeMovie_explore"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:id="@+id/categories_explore"
                    style="@style/SecondaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/categories"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:id="@+id/categoryMore_explore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Icon"
                    android:src="@drawable/ic_arrow_right"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/categories_explore"
                    app:layout_constraintBottom_toBottomOf="@id/categories_explore"
                    android:contentDescription="@string/more" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_category_explore"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/categories_explore"
                    tools:listitem="@layout/category_items" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:id="@+id/topManga_explore"
                    style="@style/SecondaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/top_mangas"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/topMangaMore_explore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Icon"
                    android:src="@drawable/ic_arrow_right"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/topManga_explore"
                    app:layout_constraintBottom_toBottomOf="@id/topManga_explore"
                    android:contentDescription="@string/more" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_topManga_explore"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    tools:listitem="@layout/anime_item"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/topManga_explore"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:id="@+id/awardWinningAnime_explore"
                    style="@style/SecondaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/award_winning"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/awardWinningAnimeMore_explore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Icon"
                    android:src="@drawable/ic_arrow_right"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/awardWinningAnime_explore"
                    app:layout_constraintBottom_toBottomOf="@id/awardWinningAnime_explore"
                    android:contentDescription="@string/more" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_awardWinningAnime_explore"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    tools:listitem="@layout/anime_item"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/awardWinningAnime_explore"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:id="@+id/topAnime_explore"
                    style="@style/SecondaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/top_anime"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/topAnimeMore_explore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Icon"
                    android:src="@drawable/ic_arrow_right"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/topAnime_explore"
                    app:layout_constraintBottom_toBottomOf="@id/topAnime_explore"
                    android:contentDescription="@string/more" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_topAnime_explore"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    tools:listitem="@layout/anime_item"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/topAnime_explore"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:id="@+id/actionAnime_explore"
                    style="@style/SecondaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/action_anime"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/actionAnimeMore_explore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_right"
                    style="@style/Icon"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/actionAnime_explore"
                    app:layout_constraintBottom_toBottomOf="@id/actionAnime_explore"
                    android:contentDescription="@string/more" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_actionAnime_explore"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    tools:listitem="@layout/anime_item"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/actionAnime_explore"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:id="@+id/upComing_explore"
                    style="@style/SecondaryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/up_coming_anime"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/upComingMore_explore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Icon"
                    android:src="@drawable/ic_arrow_right"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/upComing_explore"
                    app:layout_constraintBottom_toBottomOf="@id/upComing_explore"
                    android:contentDescription="@string/more" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_upComing_explore"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    tools:listitem="@layout/anime_item"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/upComing_explore"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
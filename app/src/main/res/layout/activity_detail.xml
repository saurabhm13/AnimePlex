                android:ellipsize="end"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="18dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearLayout2"/>

            <TextView
                android:id="@+id/character_detail"
                style="@style/SecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:text="@string/characters"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/description" />

            <ImageView
                android:id="@+id/characterMore_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Icon"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/characters"
                android:src="@drawable/ic_arrow_right"
                app:layout_constraintBottom_toBottomOf="@+id/character_detail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/character_detail" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_characters_details"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/character_detail"
                tools:listitem="@layout/anime_item" />

            <TextView
                android:id="@+id/similarAnime_detail"
                style="@style/SecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:text="@string/more_like_this"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rv_characters_details" />

            <ImageView
                android:id="@+id/similarAnimeMore_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Icon"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/characters"
                android:src="@drawable/ic_arrow_right"
                app:layout_constraintBottom_toBottomOf="@+id/similarAnime_detail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/similarAnime_detail" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_similarAnime_details"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/similarAnime_detail"
                tools:listitem="@layout/anime_item" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>